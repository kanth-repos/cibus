{
  // See https://go.microsoft.com/fwlink/?LinkId=733558
  // for the documentation about the tasks.json format
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Make Tables",
      "type": "shell",
      "command": "ant mktables"
    },
    {
      "label": "Build",
      "type": "shell",
      "command": "ant",
      "problemMatcher": [],
      "group": {
        "kind": "build",
        "isDefault": true
      }
    },
    {
      "label": "Reload",
      "type": "shell",
      "command": "curl --user admin:password http://localhost:8080/manager/text/reload?path=/cibus",
      "dependsOn": "Build"
    },
    {
      "label": "UnDeploy",
      "type": "shell",
      "command": "curl --user admin:password http://localhost:8080/manager/text/undeploy?path=/cibus",
      "dependsOn": "Build"
    },
    {
      "label": "Start",
      "type": "shell",
      "command": "curl --user admin:password http://localhost:8080/manager/text/start?path=/cibus",
      "dependsOn": "UnDeploy"
    }
  ]
}
