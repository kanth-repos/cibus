<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE struts PUBLIC "-//Apache Software Foundation//DTD Struts Configuration 2.5//EN" "http://struts.apache.org/dtds/struts-2.5.dtd">
<struts>
  <constant name="struts.action.extension" value="xhtml,,xml,json,action" />

  <constant name="struts.mapper.class" value="org.apache.struts2.dispatcher.mapper.PrefixBasedActionMapper" />
  <constant name="struts.mapper.prefixMapping" value="/api:rest,:struts"/>
  <constant name="struts.actionProxyFactory" value="prefix"/>

  <constant name="struts.rest.content.restrictToGET" value="false" />
  <constant name="struts.rest.namespace" value="/api" />
  <constant name="struts.rest.defaultExtension" value="json" />

  <constant name="struts.convention.action.suffix" value="Controller"/>
  <constant name="struts.convention.action.mapAllMatches" value="true"/>
  <constant name="struts.convention.default.parent.package" value="rest-default"/>
  <constant name="struts.convention.package.locators" value="controllers"/>

  <constant name="struts.devMode" value="true" /> 

  <package name="default" namespace="/" extends="struts-default">
    <interceptors>
      <interceptor
        class="com.cibus.intercept.AuthInterceptor"
        name="requiresAuth"
      />
      <interceptor
        class="com.cibus.intercept.LogInterceptor"
        name="cibusLog"
      />

      <interceptor-stack name="cibusDefaultStack">
        <interceptor-ref name="cibusLog" />
        <interceptor-ref name="defaultStack">
          <param name="csp.disabled">true</param>
        </interceptor-ref>
      </interceptor-stack>

      <interceptor-stack name="authStack">
        <interceptor-ref name="requiresAuth" />
        <interceptor-ref name="cibusDefaultStack" />
      </interceptor-stack>
    </interceptors>

    <default-interceptor-ref name="cibusDefaultStack"/>

    <global-results>
      <result name="signin" type="redirect">signinForm</result>
    </global-results>

    <action name="index">
      <interceptor-ref name="defaultStack"/>
      <result type="dispatcher">/content/index.jsp</result>
    </action>

    <action name="signupForm">
      <interceptor-ref name="defaultStack"/>
      <result type="dispatcher">/content/pages/signup.jsp</result>
    </action>

    <action
      class="com.cibus.actions.SignUpController"
      name="signup">
      <interceptor-ref name="defaultStack"/>
      <result name="input" type="dispatcher">/content/pages/signup.jsp</result>
      <result name="success" type="dispatcher">/content/pages/created.jsp</result>
    </action>

    <action name="signinForm">
      <interceptor-ref name="defaultStack"/>
      <result type="dispatcher">/content/pages/signin.jsp</result>
    </action>

    <action
      class="com.cibus.actions.SignInController"
      name="signin">
      <interceptor-ref name="defaultStack"/>
      <result name="success" type="redirect">index</result>
      <result name="input" type="dispatcher">/content/pages/signin.jsp</result>
    </action>

    <action
      class="com.cibus.actions.SignOutController"
      name="signout">
      <interceptor-ref name="authStack"/>
      <result name="success" type="redirect">index</result>
    </action>

    <action
      class="com.cibus.actions.DashboardController"
      name="dashboard">
      <interceptor-ref name="authStack"/>
      <result name="owner" type="dispatcher">/content/pages/owner/dashboard.jsp</result>
      <result name="user" type="dispatcher">/content/pages/user/dashboard.jsp</result>
    </action>

    <action name="createHotelForm">
      <interceptor-ref name="authStack"/>
      <result type="dispatcher">/content/pages/owner/createhotel.jsp</result>
    </action>

    <action 
      class="com.cibus.actions.HotelIdController"
      name="hotelOrders">
      <interceptor-ref name="authStack"/>
      <result name="owner" type="dispatcher">
        /content/pages/owner/ordersview.jsp
      </result>
    </action>

    <action 
      class="com.cibus.actions.HotelIdController"
      name="createFoodForm">
      <interceptor-ref name="authStack"/>
      <result name="owner" type="dispatcher">
        /content/pages/owner/createfood.jsp
      </result>
    </action>

    <action
      class="com.cibus.actions.HotelIdController"
      name="hotelFoods">
      <interceptor-ref name="authStack"/>
      <result name="owner" type="dispatcher">
        /content/pages/owner/foodsview.jsp
      </result>
      <result name="user" type="dispatcher">
        /content/pages/user/foodsview.jsp
      </result>
    </action>

    <action name="usercart">
      <interceptor-ref name="authStack"/>
      <result type="dispatcher">
        /content/pages/user/cartview.jsp
      </result>
    </action>

    <action name="userorders">
      <interceptor-ref name="authStack"/>
      <result type="dispatcher">
        /content/pages/user/ordersview.jsp
      </result>
    </action>

    <action name="account">
      <interceptor-ref name="authStack"/>
      <result type="dispatcher">
        /content/pages/account.jsp
      </result>
    </action>

    <action
      class="com.cibus.actions.HotelIdController"
      name="editHotelForm">
      <interceptor-ref name="authStack"/>
      <result name="owner" type="dispatcher">
        /content/pages/owner/edithotel.jsp
      </result>
    </action>

    <action
      class="com.cibus.actions.FoodIdController"
      name="editFoodForm">
      <interceptor-ref name="authStack"/>
      <result name="owner" type="dispatcher">
        /content/pages/owner/editfood.jsp
      </result>
    </action>

    <action name="editUserForm">
      <interceptor-ref name="authStack"/>
      <result name="success" type="dispatcher">
        /content/pages/edituser.jsp
      </result>
    </action>
  </package>

  <package name="api" namespace="/api" extends="rest-default">
    <interceptors>
      <interceptor
        class="com.cibus.intercept.AuthInterceptor"
        name="requiresAuth"
      />
      <interceptor
        class="com.cibus.intercept.LogInterceptor"
        name="cibusLog"
      />

      <interceptor-stack name="cibusDefaultStack">
        <interceptor-ref name="cibusLog" />
        <interceptor-ref name="params"/>
        <interceptor-ref name="restDefaultStack" />
      </interceptor-stack>

      <interceptor-stack name="authStack">
        <interceptor-ref name="requiresAuth" />
        <interceptor-ref name="params"/>
        <interceptor-ref name="cibusDefaultStack" />
      </interceptor-stack>
    </interceptors>

    <default-interceptor-ref name="cibusDefaultStack"/>

    <global-results>
      <result name="signin" type="httpheader">
        <param name="status">400</param>
        <param name="error">Unauthorized</param>
      </result>
    </global-results>

    <action
      class="com.cibus.controllers.CartsController"
      name="carts/*">
      <interceptor-ref name="authStack"/>
    </action>

    <action
      class="com.cibus.controllers.FoodsController"
      name="foods/*">
      <interceptor-ref name="authStack"/>
    </action>

    <action
      class="com.cibus.controllers.HotelsController"
      name="hotels/*">
      <interceptor-ref name="authStack"/>
    </action>

    <action
      class="com.cibus.controllers.OrdersController"
      name="orders/*">
      <interceptor-ref name="authStack"/>
    </action>

    <action
      class="com.cibus.controllers.UsersController"
      name="users/*">
      <interceptor-ref name="authStack"/>
    </action>
  </package>
</struts>
