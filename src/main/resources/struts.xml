<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE struts PUBLIC "-//Apache Software Foundation//DTD Struts Configuration 2.5//EN" "http://struts.apache.org/dtds/struts-2.5.dtd">
<struts>
  <constant name="struts.action.extension" value="xhtml,,xml,json,action" />

  <constant name="struts.mapper.class" value="org.apache.struts2.dispatcher.mapper.PrefixBasedActionMapper" />
  <constant name="struts.mapper.prefixMapping" value="/api:rest,:struts"/>
  <constant name="struts.actionProxyFactory" value="prefix"/>

  <constant name="struts.rest.content.restrictToGET" value="false" />
  <constant name="struts.rest.namespace" value="/api" />
  <constant name="struts.rest.defaultExtension" value="json" />

  <constant name="struts.convention.action.suffix" value="Controller"/>
  <constant name="struts.convention.action.mapAllMatches" value="true"/>
  <constant name="struts.convention.default.parent.package" value="rest-default"/>
  <constant name="struts.convention.package.locators" value="controllers"/>

  <constant name="struts.devMode" value="true" />

  <package name="default" namespace="/" extends="struts-default">
    <interceptors>
      <interceptor
        class="com.cibus.intercept.AuthInterceptor"
        name="requiresAuth"
      />

      <interceptor-stack name="authStack">
        <interceptor-ref name="requiresAuth" />
        <interceptor-ref name="defaultStack" />
      </interceptor-stack>
    </interceptors>

    <global-results>
      <result name="signin" type="redirect">signinForm</result>
    </global-results>

    <action name="index">
      <interceptor-ref name="defaultStack"/>
      <result>/index.jsp</result>
    </action>

    <action name="signupForm">
      <interceptor-ref name="defaultStack"/>
      <result>/pages/signup.jsp</result>
    </action>

    <action
      class="com.cibus.actions.SignUpAction"
      name="signup">
      <interceptor-ref name="defaultStack"/>
      <result name="input">/pages/signup.jsp</result>
      <result name="success">/pages/created.jsp</result>
    </action>

    <action name="signinForm">
      <interceptor-ref name="defaultStack"/>
      <result>/pages/signin.jsp</result>
    </action>

    <action
      class="com.cibus.actions.SignInAction"
      name="signin">
      <interceptor-ref name="defaultStack"/>
      <result name="success" type="redirect">index</result>
      <result name="input">/pages/signin.jsp</result>
    </action>

    <action
      class="com.cibus.actions.SignOutAction"
      name="signout">
      <interceptor-ref name="authStack"/>
      <result name="success" type="redirect">index</result>
    </action>

    <action
      class="com.cibus.actions.DashboardAction"
      name="dashboard">
      <interceptor-ref name="authStack"/>
      <result name="owner">/pages/owner/dashboard.jsp</result>
      <result name="user">pages/user/dashboard.jsp</result>
    </action>
  </package>

  <package name="api" namespace="/api" extends="rest-default">
    <interceptors>
      <interceptor
        class="com.cibus.intercept.AuthInterceptor"
        name="requiresAuth"
      />

      <interceptor-stack name="authStack">
        <interceptor-ref name="requiresAuth" />
        <interceptor-ref name="defaultStack" />
      </interceptor-stack>
    </interceptors>

    <global-results>
      <result name="signin" type="redirect">signinForm</result>
    </global-results>

    <action
      class="com.cibus.controllers.CartsController"
      name="carts/*">
      <interceptor-ref name="authStack"/>
    </action>

    <action
      class="com.cibus.controllers.FoodsController"
      name="foods/*">
      <interceptor-ref name="authStack"/>
    </action>

    <action
      class="com.cibus.controllers.HotelsController"
      name="hotels/*">
      <interceptor-ref name="authStack"/>
    </action>

    <action
      class="com.cibus.controllers.OrdersController"
      name="orders/*">
      <interceptor-ref name="authStack"/>
    </action>

    <action
      class="com.cibus.controllers.UsersController"
      name="users/*">
      <interceptor-ref name="authStack"/>
    </action>
  </package>
</struts>
